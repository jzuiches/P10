<div class="container-Jumbotron-center">
  <h1>Sign In</h1>

  <% if @error %>
    <div class="errors"><%= @error %></div>
  <% end %>
<form class="form-horizontal" role="form" id="sign-in" method="post" action="/sessions">

   <div class="form-group">
    <label for="inputPassword3" class="col-sm-8 control-label">Username</label>
    <div class="col-sm-3">
      <input type="username" class="form-control" id="inputPassword3" placeholder="Username">
    </div>
  </div>

  <div class="form-group">
    <label for="inputPassword3" class="col-sm-8 control-label">Password</label>
    <div class="col-sm-3">
      <input type="password" class="form-control" id="inputPassword3" placeholder="Password">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-6 col-sm-8">
      <button type="submit" class="btn btn-default">Sign in</button>
    </div>
  </div>
</form>
